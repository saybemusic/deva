<div class="container">
  <h1 class="program-show-title"><%= @program.title %></h1>


  <div class="exercises-container">
    <div class="program-info">
      <p><strong>Ton niveau :</strong> <%= @program.difficulty %></p>
      <p><strong>Langage souhaité :</strong> <%= @program.language %></p>
      <p><strong>Complété :</strong> <%= @program.completion_percentage %>%</p>
      <p><strong>Temps souhaité :</strong> <%= @program.time_constraint %></p>
    </div>
    <p><strong>Exercices :</strong></p>
      <div class="card">
        <% @program.exercises.each do |exercise| %>
          <%= link_to program_exercise_path(@program, exercise) do %>
            <p><strong><%= exercise.title %></strong></p>
          <% end %>
            <p><strong><%= exercise.finished %></strong></p>
            <p><strong><%= exercise.content %></strong></p>
        <% end %>
      </div>
  </div>

  <div class="actions">
    <%= link_to "Supprimer", program_path(@program),
                data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?" },
                class: "btn-delete" %>
    <%= link_to "Retour aux programmes", programs_path, class: "btn-back" %>
  </div>
</div>
